<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity ProductOrder.
    -->
    <changeSet id="20171212225541-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_product_order_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>
        
        <addForeignKeyConstraint baseColumnNames="delivery_address_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_product_order_delivery_address_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_product_order_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>
    
    </changeSet>
</databaseChangeLog>
